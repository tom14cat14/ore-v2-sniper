# Ore Grid Sniper Configuration
# Copy this to .env and fill in your values

# ====== WALLET SETTINGS ======
# Your Solana wallet private key (base58 format)
# ⚠️ KEEP THIS SECRET! Never commit .env to git!
WALLET_PRIVATE_KEY=your_private_key_here

# ====== ORE API SETTINGS ======
# Ore grid API endpoint
ORE_API_URL=https://ore.supply/v1/grid

# Ore program ID on Solana
ORE_PROGRAM_ID=oreoN2tQbHXVaZcohgZJ4H2qQvY8kU7B5b6t3Yc3V3Yc

# Fallback Ore price in SOL (update from Jupiter/Birdeye)
ORE_PRICE_SOL=0.00072

# ====== STRATEGY PARAMETERS ======
# Minimum expected value percentage (15% = only snipe if 15%+ profit expected)
MIN_EV_PERCENTAGE=15.0

# Time window before reset to start sniping (seconds)
SNIPE_WINDOW_SECONDS=3

# Ore grid reset interval (seconds)
RESET_INTERVAL_SECONDS=60

# ====== SAFETY LIMITS ======
# Maximum cost per claim (SOL)
MAX_CLAIM_COST_SOL=0.05

# Maximum claims per day
MAX_DAILY_CLAIMS=100

# Maximum daily loss limit (SOL)
MAX_DAILY_LOSS_SOL=0.5

# Minimum wallet balance to maintain (SOL)
MIN_WALLET_BALANCE_SOL=0.1

# ====== JITO SETTINGS ======
# Jito block engine endpoint
JITO_ENDPOINT=https://ny.mainnet.block-engine.jito.wtf

# Base Jito tip (lamports) - will be scaled based on claim cost
JITO_TIP_LAMPORTS=50000

# ====== RPC SETTINGS ======
# Solana RPC endpoint (use premium RPC for best performance)
RPC_URL=https://api.mainnet-beta.solana.com

# Solana WebSocket endpoint
WS_URL=wss://api.mainnet-beta.solana.com

# ====== TRADING MODE ======
# Paper trading mode (true = simulate, false = real money)
PAPER_TRADING=true

# Enable real trading (DANGER: Only enable after testing!)
ENABLE_REAL_TRADING=false

# ====== SHREDSTREAM (OPTIONAL) ======
# ShredStream endpoint for ultra-low latency timing (optional)
# SHREDSTREAM_ENDPOINT=https://shredstream.rpcpool.com/<YOUR_API_KEY>

# Use ShredStream for precise timing (true/false)
USE_SHREDSTREAM_TIMING=false

# ====== PERFORMANCE ======
# Grid polling interval (milliseconds)
POLLING_INTERVAL_MS=80

# Maximum retries per bundle
MAX_RETRIES=3

# ====== LOGGING ======
# Set log level (trace, debug, info, warn, error)
RUST_LOG=info
