# Ore Board Sniper Configuration
# Based on real Ore V2 lottery protocol
# Copy this to .env and fill in your actual values

# === WALLET CONFIGURATION ===
# Your Solana wallet private key (base58 format)
# ⚠️ KEEP THIS SECRET! Never commit .env to git!
WALLET_PRIVATE_KEY=your_base58_private_key_here

# === ORE PROTOCOL ===
ORE_PROGRAM_ID=oreV3EG1i9BEgiAJ8b177Z2S2rMarzak4NMv1kULvWv
ORE_MINT_ADDRESS=oreoU2P8bN6jkk3jbaiVxYnG1dCXcYxwhwyK9jSybcp
ORE_API_URL=https://ore.supply/v1

# === STRATEGY PARAMETERS ===
# Minimum expected value to enter (0% = any +EV, ORE rewards are main profit)
MIN_EV_PERCENTAGE=0.0

# Multi-cell portfolio strategy (adaptive scaling)
MIN_CELLS_PER_ROUND=1              # Start conservative (1 cell)
MAX_CELLS_PER_ROUND=25             # Max coverage (full board)
TARGET_CELLS_PER_ROUND=5           # Target at medium bankroll
DEPLOYMENT_PER_CELL_SOL=0.01       # Amount we deploy into each cell (our investment)
MAX_COST_PER_ROUND_SOL=0.02        # Safety limit (5 cells × 0.004 = 0.02 SOL max)
ADAPTIVE_SCALING=true              # Enable bankroll-based scaling
SCALE_THRESHOLD_LOW_SOL=0.1        # Scale to 5 cells at 0.1 SOL bankroll
SCALE_THRESHOLD_HIGH_SOL=1.0       # Scale to 25 cells at 1.0 SOL bankroll

# Snipe window in seconds before reset (2.8s optimal)
SNIPE_WINDOW_SECONDS=3

# Round reset interval in seconds (150 slots = 60s)
RESET_INTERVAL_SECONDS=60

# Current ORE price in SOL (update from Jupiter)
ORE_PRICE_SOL=0.0008

# === SAFETY LIMITS ===
# Maximum SOL to bet per cell
MAX_CLAIM_COST_SOL=0.005

# Maximum number of claims per day
MAX_DAILY_CLAIMS=100

# Maximum daily loss in SOL
MAX_DAILY_LOSS_SOL=0.5

# Minimum wallet balance to maintain
MIN_WALLET_BALANCE_SOL=0.1

# === JITO CONFIGURATION ===
JITO_ENDPOINT=https://mainnet.block-engine.jito.wtf/api/v1
JITO_TIP_LAMPORTS=50000

# === RPC ENDPOINTS ===
# Use premium RPC for best performance
# Example: https://api.mainnet-beta.solana.com
# or ERPC: https://edge.erpc.global?api-key=YOUR_API_KEY
RPC_URL=https://api.mainnet-beta.solana.com

# WebSocket endpoint for real-time updates
# Example: wss://api.mainnet-beta.solana.com
# or Helius: wss://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
WS_URL=wss://api.mainnet-beta.solana.com

# === SHREDSTREAM (<1ms latency for lottery timing) ===
# Using ERPC Global endpoint (or rpcpool with your API key)
# Example: https://shreds-ny6-1.erpc.global
SHREDSTREAM_ENDPOINT=https://shreds-ny6-1.erpc.global
USE_SHREDSTREAM_TIMING=true

# === TRADING MODE ===
# Set to true for paper trading (safe testing)
PAPER_TRADING=true

# Set to false for paper trading, true for live trading (DANGER!)
ENABLE_REAL_TRADING=false

# Testing/Debug flags
FORCE_TEST_MODE=false
EXECUTE_ONCE_AND_EXIT=false

# === PERFORMANCE ===
POLLING_INTERVAL_MS=100
MAX_RETRIES=3
